<section class="section">
  <div class="container">
    <% @competitions.each do |competition| %>
      <div class="box">
        <div class="columns">
          <div class="column is-2">
            <div class="image is-128x128 is-pulled-right">
              <img src="http://lorempixel.com/128/128/">
            </div>
          </div>
          <div class="column is-4">
            <p class="title is-bold"><%= competition.name %></p>
            <p class="subtitle is-5"><%= truncate(competition.description.markdown, length: 150) %></p>
          </div>
          <div class="column">
            <%= distance_of_time_in_words_to_now(competition.created_at) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
