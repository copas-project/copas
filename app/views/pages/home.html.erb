<section id="home-main-hero" class="hero is-primary is-large is-fullheight header-image">
  <div class="hero-body">
    <div class="container">
      <div class="tile is-ancestor">
        <div class="tile is-4 is-parent">
          <div class="tile is-child">
            <%= image_tag 'logo-white.svg', class: 'image' %>
          </div>
        </div>
        <div class="tile is-vertical is-parent">
          <div class="tile is-child has-text-centered">
            <h1 class="title is-1"><span id="home-chtext"></span> que movem o mundo</h1>
            <div class="spacing-20"></div>
            <h2 class="title is-3">Datoca é a sua plataforma para solução</h2>
            <h2 class="subtitle is-3">de desafios utilizando Ciência de Dados</h2>
          </div>
          <div class="tile is-child has-text-centered">
            <div class="control is-grouped is-centered">
              <p class="control">
                <%= link_to 'Competir', competitions_path, class: 'button is-primary is-large is-outlined' %>
              </p>
              <p class="control">
                <%= link_to 'Entrar', new_user_session_path, class: 'button is-success is-large is-outlined' %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="hero-foot">
    <div class="container has-text-centered">
      <span id="bouncing-arrow" class="icon is-large">
        <i class="fa fa-chevron-down"></i>
      </span>
    </div>
  </div>
</section>
<section class="hero is-info">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">Como funciona?</h1>
    </div>
  </div>
</section>
<section id="step-1" class="hero is-small">
  <div class="hero-body">
    <div class="container">
      <div class="tile is-ancestor">
        <div class="tile is-vertical is-parent">
          <div class="tile is-child has-text-centered reveal-bot">
            <h1 class="title is-1">Escolha um desafio</h1>
          </div>
          <div class="tile is-parent reveal-bot">
            <div class="tile is-half is-child">
              <%= image_tag 'home-scientist.svg', class: 'image is-256x256 is-centered' %>
            </div>
            <div class="tile is-half is-child">
              <%= image_tag 'home-student.svg', class: 'image is-256x256 is-centered' %>
            </div>
          </div>
          <div class="tile is-parent reveal-bot">
            <div class="tile is-half is-child has-text-centered">
              <h3 class="title is-3">Se você já é um expert dispute</h3>
              <h3 class="subtitle is-3">uma de nossas competições.</h3>
            </div>
            <div class="tile is-half is-child has-text-centered">
              <h3 class="title is-3">Se ainda é um aprendiz confira</h3>
              <h3 class="subtitle is-3">nossos desafios de aprendizagem!</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="step-2" class="hero is-dark is-small">
  <div class="hero-body">
    <div class="container">
      <nav class="level">
        <div class="level-left reveal-left">
          <div class="level-item">
            <h1 class="title is-1">Baixe e analise os dados</h1>
            <div class="spacing-20"></div>
            <h3 class="subtitle is-3">Entenda quais tipos de dados estão a sua disposição</h3>
          </div>
        </div>
        <div class="level-right reveal-right">
          <div class="level-item"><%= image_tag 'home-datasource.svg', class: 'image is-256x256 is-centered' %></div>
        </div>
      </nav>
    </div>
  </div>
</section>
<section id="step-3" class="hero is-info is-small">
  <div class="hero-body">
    <div class="container">
      <nav class="level">
        <div class="level-left reveal-left">
          <div class="level-item"><%= image_tag 'home-forecast.svg', class: 'image is-512x256 is-centered' %></div>
        </div>
        <div class="level-right reveal-right">
          <div class="level-item has-text-right">
            <h1 class="title is-1">Encontre soluções</h1>
            <div class="spacing-20"></div>
            <h3 class="title is-3">Utilize técnicas e tecnologias de sua preferência</h3>
            <div class="spacing-10"></div>
            <h3 class="subtitle is-3">para desenvolver a melhor solução!</h3>
          </div>
        </div>
      </nav>
    </div>
  </div>
</section>
<section id="step-4" class="hero is-small">
  <div class="hero-body">
    <div class="container">
      <div class="tile is-ancestor">
        <div class="tile is-vertical is-parent reveal-bot">
          <div class="tile is-child has-text-centered">
            <h1 class="title is-1">Seja reconhecido</h1>
          </div>
          <div class="tile is-parent">
            <div class="tile is-half is-child reveal-bot">
              <%= image_tag 'home-podium.svg', class: 'image is-256x256 is-centered' %>
            </div>
            <div class="tile is-half is-child reveal-bot">
              <%= image_tag 'home-certificate.svg', class: 'image is-256x256 is-centered' %>
            </div>
          </div>
          <div class="tile is-parent reveal-bot">
            <div class="tile is-half is-child has-text-centered">
              <h3 class="title is-3">Já conquistou seu lugar no pódio?</h3>
              <h3 class="subtitle is-3">Batalhe pelas premiações!</h3>
            </div>
            <div class="tile is-half is-child has-text-centered">
              <h3 class="title is-3">Concluiu um desafio de aprendizagem?</h3>
              <h3 class="subtitle is-3">Obtenha nossas certificações!</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="step-5" class="hero is-info is-small">
  <div class="hero-body">
    <div class="container">
      <div class="tile is-ancestor">
        <div class="tile is-parent">
          <div class="tile is-child">
            <h1 class="title is-1">Participe!</h1>
            <h2 class="subtitle is-3">Explore nossas competições ou cadastre-se para começar agora.</h2>
          </div>
          <div class="tile is-vertical is-parent">
            <div class="tile is-child">
              <%= link_to competitions_path, class: 'button is-warning is-large is-fullwidth' do %>
                <span class="icon"><i class="fa fa-trophy"></i></span>
                <span>Competições</span>
              <% end %>
            </div>
            <div class="tile is-child">
              <%= link_to new_user_registration_path, class: 'button is-success is-large is-fullwidth' do %>
                <span class="icon"><i class="fa fa-user-plus"></i></span>
                <span>Criar conta</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <p>
        © 2016 by Exemplaria Solutions.
      </p>
    </div>
  </div>
</footer>
