
$family-sans-serif: 'Cabin', sans-serif;

$primary: #645e9d;
$info: #4faec1;
$success: #6ddb90;
$warning: #ecff9b;
$danger: #ff1654;

@import "bulma";

@font-face {
  font-family: 'Cabin';
  font-weight: 400;
  font-style: normal;
  src: url(font-path('cabin-regular.eot'));
  src: url(font-path('cabin-regular.eot?#iefix')) format('embedded-opentype'),
       local('cabin Regular'),
       local('cabin-regular'),
       url(font-path('cabin-regular.woff2')) format('woff2'),
       url(font-path('cabin-regular.woff')) format('woff'),
       url(font-path('cabin-regular.ttf')) format('truetype'),
       url(font-path('cabin-regular.svg')) format('svg');
}

$fa-font-path: "/assets/fontawesome/fonts";
@import 'fontawesome.scss';

@font-face {
	font-family:'FontAwesome';
	src:url('<%= asset_path("fontawesome/fonts/fontawesome-webfont.eot")%>?v=4.6.3');
	src:url('<%= asset_path("fontawesome/fonts/fontawesome-webfont.eot")%>?#iefix&v=4.6.3')
  format("embedded-opentype"),url('<%= asset_path("fontawesome/fonts/fontawesome-webfont.woff2")%>?v=4.6.3')
  format("woff2"),url('<%= asset_path("fontawesome/fonts/fontawesome-webfont.woff")%>?v=4.6.3')
  format("woff"),url('<%= asset_path("fontawesome/fonts/fontawesome-webfont.ttf")%>?v=4.6.3')
  format("truetype"),url('<%= asset_path("fontawesome/fonts/fontawesome-webfont.svg")%>?v=4.6.3#fontawesomeregular')
  format("svg");
	font-weight:normal;
	font-style:normal
}

@each $name, $pair in $colors {
  $color: nth($pair, 1);
  .has-text-#{"" + $name} {
    color: $color;
  }
  a.has-text-#{"" + $name} {
    &:hover,
    &:focus {
      color: darken($color, 10%);
    }
  }
}

.notifications {
  position: fixed;
  top: 50px;
  right: 0;
  z-index: 1024 + 233;
  pointer-events: none;
  @include tablet() {
    max-width: 320px;
  }
  .notification {
    margin: 20px;
  }
}

.notification {
  position: relative;
  min-width: 240px;
  backface-visibility: hidden;
  transform: translate3d(0, 0, 0);
  pointer-events: all;
}

.is-fullwidth { width: 100%; }
